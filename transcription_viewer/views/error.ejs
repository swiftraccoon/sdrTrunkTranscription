<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('partials/_head.ejs') %>
  <title><%= title %> - Error</title>
  <style>
    .error-container {
      text-align: center;
      padding: 2rem;
      margin-top: 3rem;
    }
    .error-icon {
      font-size: 4rem;
      color: #dc3545;
      margin-bottom: 1rem;
    }
    .error-message {
      font-size: 1.2rem;
      margin: 1rem 0;
      color: #666;
    }
    .error-action {
      margin-top: 2rem;
    }
  </style>
</head>
<body>
  <%- include('partials/_header.ejs') %>

  <div class="container">
    <div class="error-container">
      <div class="error-icon">
        <i class="fas fa-exclamation-circle"></i>
      </div>
      <h1 class="error-title"><%= title %></h1>
      <div class="error-message">
        <%= message %>
      </div>
      <div class="error-action">
        <%- action %>
      </div>
    </div>
  </div>

  <%- include('partials/_footer.ejs') %>
</body>
</html> 